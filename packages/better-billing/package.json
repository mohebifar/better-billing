{
  "name": "@better-billing/core",
  "version": "0.1.0",
  "description": "TypeScript-first, provider-agnostic billing infrastructure",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.cjs"
    },
    "./adapters/drizzle": {
      "types": "./dist/adapters/drizzle.d.ts",
      "import": "./dist/adapters/drizzle.mjs",
      "require": "./dist/adapters/drizzle.cjs"
    },
    "./adapters/prisma": {
      "types": "./dist/adapters/prisma.d.ts",
      "import": "./dist/adapters/prisma.mjs",
      "require": "./dist/adapters/prisma.cjs"
    }
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "prepack": "pnpm build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "keywords": [
    "billing",
    "subscription",
    "typescript",
    "stripe",
    "saas"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.7",
    "@prisma/client": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.29.5",
    "prisma": "^5.0.0",
    "stripe": "^18.4.0",
    "typescript": "^5.3.0",
    "unbuild": "^2.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "better-call": "^1.0.16",
    "zod": "^4.1.0"
  },
  "peerDependencies": {
    "@prisma/client": ">=5.0.0",
    "drizzle-orm": ">=0.29.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    },
    "drizzle-orm": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ]
}
